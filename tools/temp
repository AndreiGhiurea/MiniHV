#pragma once

typedef struct _THREAD_ENTRY
{
    QWORD                   ThreadId;
    HANDLE                  ThreadDirectory;
    struct _PROC_ENTRY*     ParentProcess;
} THREAD_ENTRY, *PTHREAD_ENTRY;

